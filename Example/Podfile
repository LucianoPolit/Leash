platform :ios, '10.0'

def myPods
    use_frameworks!
    if ENV['TRAVIS']
        pod 'Leash', :path => '../'
        pod 'Leash/RxSwift', :path => '../'
        pod 'Leash/Interceptors', :path => '../'
    else
        pod 'Leash'
        pod 'Leash/RxSwift'
        pod 'Leash/Interceptors'
    end
end

target 'Example' do
    myPods
end

target 'Tests' do
    myPods
    pod 'OHHTTPStubs/Swift', '~> 8.0'
end
